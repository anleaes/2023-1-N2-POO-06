@startuml prontuarioapp

class Paciente {
  - nome: string
  - cpf: int
  - idade: int
  - sexo: string
  - endereço: string
  - historico: string
  + construtor(nome, cpf, idade, sexo, endereço, historico)
}

class Medico {
  - id: int
  - nome: string
  - especialidade: string
  - paciente: Paciente
  + construtor(id, nome, especialidade, paciente)
}

class Medicamento {
  - nome: string
  - numero_lote: int
  - validade: date
  + construtor(nome, numero_lote, validade)
}


class Prescricao {
  - medicamento: Medicamento
  - dosagem: string
  - frequencia: string
  - tratamento: string
